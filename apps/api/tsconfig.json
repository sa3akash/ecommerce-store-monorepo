{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
    }
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
